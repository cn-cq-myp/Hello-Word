<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
  <com.myp.zhbj.view.NoScrollViewPager
      	android:id="@+id/vp_content" 
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		/>
  
  <RadioGroup 
      	android:id="@+id/rg_group"
       	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/bottom_tab_bg"
    	android:gravity="center"
    	android:orientation="horizontal"
    	>
    	<RadioButton
    	    android:id="@+id/rb_home"
    	    style="@style/Bottom_Tab_Style"
    	    android:text="首页"
    	    android:drawableTop="@drawable/tab_home_select"
    	    android:checked="true"
    	    />
    	
    	<RadioButton
    	    android:id="@+id/rb_news"
    	    style="@style/Bottom_Tab_Style"
    	    android:text="新闻"
    	    android:drawableTop="@drawable/tab_news_select"
    	    />
    	
    	<RadioButton
    	    android:id="@+id/rb_smart"
    	    style="@style/Bottom_Tab_Style"
    	    android:text="服务"
    	    android:drawableTop="@drawable/tab_smart_select"
    	    />
    	
    	<RadioButton
    	    android:id="@+id/rb_gov"
    	    style="@style/Bottom_Tab_Style"
    	    android:text="政务"
    	    android:drawableTop="@drawable/tab_gov_select"
    	    />
    	
    	<RadioButton
    	    android:id="@+id/rb_setting"
    	    style="@style/Bottom_Tab_Style"
    	    android:text="设置"
    	    android:drawableTop="@drawable/tab_setting_select"
    	    />
      </RadioGroup>
</LinearLayout>
